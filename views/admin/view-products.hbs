<section>
<div class="container-fluid mt-4">
    <div class="row">
        <div class="">
        <a href="/admin/add-products" class="btn btn-success">Add products</a>
    </div>
<table class="table" id="view-products">
  <thead>
    <tr>
      <th scope="col">#No</th>
      <th scope="col">product</th>
      <th scope="col">Type</th>
      <th scope="col">price</th>
      <th scope="col">image</th>
      <th scope="col">controls</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <td scope="row">{{@index}}</td>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg"></td>
      <td>
        <a href="/admin/edit-products/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-products/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.name}}?')">Delete</a>
      </td>
      
    </tr>
    {{/each}}
    
  </tbody>
</table>
</div>
</div>
</section>
<script>
  jQuery(document).ready(function($) {
    $('#view-products').DataTable();
} );

</script>