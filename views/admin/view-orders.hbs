<section>

  <div class="container mt-4">
    <h1>Orders</h1>
    <div class="row">
      <div class="">
      </div>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#No</th>
          <th scope="col">Date</th>
          <th scope="col">Address</th>
          <th scope="col">Mobile</th>
          <th scope="col">Total</th>
          <th scope="col">status</th>
          <th scope="col">controls</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.date}}</td>
          <td>{{this.orderDetails.address}}</td>
          <td>{{this.orderDetails.mobile}}</td>

          <td>{{this.total}}</td>
          <td>{{this.status}}</td>

          <td>
            <a href="/view-orders/{{this._id}}" class="btn btn-primary">View Product</a>
          </td>

        </tr>
        {{/each}}

      </tbody>
    </table>

  </div>
</section>