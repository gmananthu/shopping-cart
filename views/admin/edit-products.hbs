<section>
    <div class="container">
        <h2 class="mt-4">Edit Products</h2>
        {{#if product}}
<form action="/admin/edit-products/{{product._id}}" method="post" enctype="multipart/form-data">
<label for="">Name</label><br>
<input name="name" type="text" value="{{product.name}}" style="width: 300px;"><br>
<label for="">Category</label><br>
<input name="category" type="text" value="{{product.category}}" style="width: 300px;"><br>
<label for="">Price</label><br>
<input name="price" type="number" value="{{product.price}}"style="width: 300px;"><br>
<img src="/product-images/{{product._id}}.jpg" style="width: 100px;height:auto" id="imgView">
<label for="image">add image</label><br>
<input name="image" type="file" onchange="viewImage(event)"><br><br>

{{/if}}

<input type="submit" value="Submit" class="btn btn-success">

</form>

    </div>
</section>
<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>