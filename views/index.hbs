
<section>

<div class="row container-fluid">

{{#each products}}
    <div class="col-12 col-md-3 col-lg-3">

        <div class="card mt-4 ms-auto  text-center" style="width: auto;">

            <img style="width: 185px;height:150px;margin-left:auto;margin-right:auto;margin-top:10px;" src="/product-images/{{this._id}}.jpg" class="card-img-top prodisplay" alt="...">

            <div class="card-body">

              <h5 class=" ">{{this.name}}</h5>

              <p class="card-text">  {{this.category}} </p>
              
              <h5>{{this.price}}</h5>

           <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button><br>
           <span id="{{this._id}}" style="visibility:hidden ; text-decoration:underline; color:rgb(209, 34, 34)">Please login first</span>

            </div>

        </div>

        </div>
        {{/each}}
        
            </div>
</section>


   

 

    